{
    "name": "iksaku/siase-wrapper",
    "description": "A PHP Wrapper for various endpoints in the SIASE system",
    "type": "library",
    "license": "AGPL-3.0",
    "authors": [
        {
            "name": "Jorge Gonz√°lez",
            "email": "iksaku@me.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3",
        "guzzlehttp/guzzle": "^6.3",
        "ext-simplexml": "*",
        "nesbot/carbon": "^2.22",
        "ext-json": "*",
        "symfony/serializer": "^4.3|^5.0",
        "symfony/property-info": "^4.3|^5.0",
        "symfony/property-access": "^4.3|^5.0",
        "symfony/finder": "^4.3|^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^8.3",
        "fzaninotto/faker": "^1.9",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer lint",
                "git update-index --again"
            ],
            "pre-push": [
                "composer test"
            ],
            "post-merge": [
                "composer install"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "iksaku\\SIASE\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "iksaku\\SIASE\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "iksaku\\SIASE\\Composer\\Scripts::devOnly",
            "cghooks add --ignore-lock"
        ],
        "post-update-cmd": [
            "iksaku\\SIASE\\Composer\\Scripts::devOnly",
            "cghooks update"
        ],

        "lint": "php-cs-fixer fix",
        "test:lint": "@lint --dry-run",
        "test:unit": "phpunit",
        "test": [
            "@test:lint",
            "@test:unit"
        ]
    }
}
